<input class="btn btn-danger" type="button" id="new_creature" value="New Creature">

<%= form_tag '/creaturetypes', :id => 'creature_form', :remote => true do %> <!-- giving it an id so we can call it from javascript --><!-- remote true turns it into an ajax from -->
	<%= text_field_tag 'name' %>
	<%= submit_tag 'Create Creature', :class => 'btn btn-primary' %>
<% end %>

<ul id="creature_types">
	<% @creature_types.each do |ct| %>
		<li><%= link_to ct.name, creaturetype_path(ct), :class => 'btn btn-info' %></li>
	<% end %>
</ul>

<%= paginate @creature_types %> <!-- #this is using the kaminari gem after you run rails g kaminari:config -->